@model TipoCuenta;

@{
    ViewData["Title"] = "Crear Tipo Cuenta";

}


<h1>Crear Tipo Cuenta</h1>

<h5>El tipo de cuenta se refiere a como podemos agrupar cuentas. Ejemplos: préstamos, tarjetas de crédito, etc.</h5>


<div asp-validation-summary="ModelOnly"></div>

<form asp-controller="TiposCuentas" asp-action="Crear">

    <div class="mb-3">
          
            <!-- asp-for toma del modelo el nombre para label-->
          <label asp-for="Nombre" class="form-label"></label>
          <!-- asp-for en este caso, cuando hay un error, desde el controller devolvemos la info y aquí pega lo recibido en Nombre -->
          <input type="text" asp-for="Nombre" class="form-control" />
          <span asp-validation-for="Nombre" class="text-danger"></span>
     </div>


    

     <button type="submit" class="btn btn-primary">Enviar</button>
     <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>



<!-- PARTIAL TRAIDO DE SHARED PARA VALIDAR-->
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}